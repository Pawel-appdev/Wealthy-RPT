<Window x:Name="frmDeleteYear" x:Class="Wealthy_RPT.DeleteYear"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wealthy_RPT"
        mc:Ignorable="d"
        Title="Delete Year" Height="255" Width="466.58" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Margin="0,0,-7,0.6">
        <ComboBox x:Name="cboDeleteYear" HorizontalAlignment="Left" Height="25" Margin="300,50,0,0" VerticalAlignment="Top" Width="114" SelectionChanged="cboDeleteYear_SelectionChanged"/>
        <Label Content="Confirm which year you wish to delete." HorizontalAlignment="Left" Height="38" Margin="29,47,0,0" VerticalAlignment="Top" Width="305" FontSize="14"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Height="35" Margin="71,153,0,0" VerticalAlignment="Top" Width="115" Click="btnConfirm_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="35" Margin="274,153,0,0" VerticalAlignment="Top" Width="115" Click="btnCancel_Click"/>

    </Grid>
</Window>
